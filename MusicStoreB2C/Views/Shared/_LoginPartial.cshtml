@*
@using Microsoft.AspNetCore.Identity
@using MusicStoreB2C.Models
*@

@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Hello, " + @User.Identity.Name, "Index", "Manage", new { area = "" }, null)</li>
        <li>@Html.ActionLink("Log Out", "LogOff", "Account", new { area = "" }, null)</li>
    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign In", "SignIn", "Account", new { area = "" }, null)</li>
        <li>@Html.ActionLink("Sign Up", "SignUp", "Account", new { area = "" }, null)</li>
        <li>@Html.ActionLink("Sign Up/In", "SignUpOrIn", "Account", new { area = "" }, null)</li>
    </ul>
}

